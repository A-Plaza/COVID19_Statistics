    "version": "2.0.0",
    "tasks": [
        {
            "label": "run app",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "serve"
            ],
            "options": {
                "cwd": "${workspaceFolder}/disease_tracker"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "install client packages",
            "type": "shell",
            "command": "npm",
            "args": [
                "install"
            ],
            "options": {
                "cwd": "${workspaceFolder}/disease_tracker"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "watch client",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "watch"
            ],
            "options": {
                "cwd": "${workspaceFolder}/disease_tracker"
            },
            "group": "build",
            "problemMatcher": []
        },
    ]
}